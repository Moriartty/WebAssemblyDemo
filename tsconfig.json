{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "moduleResolution": "node",
        "jsx": "react",
        "allowJs":true,
        "esModuleInterop": true,
        "experimentalDecorators":true,
        "lib": ["es5", "es2015", "dom", "scripthost"],
        "baseUrl": "."
    },
    "extends": "../../node_modules/assemblyscript/std/portable.json",
    "include": [
        "./src/**/*",
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "./src/index.html"
    ]
}